{
    "exclude": ["node_modules", "dist"],
    "compilerOptions": {
        "outDir": "./dist",
        "noImplicitAny": true,
        "module": "es6",
        "target": "es6",
        "allowJs": true,
        "moduleResolution": "node",
        "strict": true,
        "declaration": true,
        "typeRoots": [
            "./node_modules/@types",
            "./src/types/**/*"
        ]
    }
}