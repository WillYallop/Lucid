{
    "include": [
        "core/modules/src/**/*.ts"
    ],
    "exclude": [
        "./core/modules/tests",
        "./core/modules/dist"
    ],
    "compilerOptions": {
        "outDir": "./core/modules/dist",
        "noImplicitAny": true,
        "module": "es6",
        "target": "es6",
        "moduleResolution": "node",
        "strict": true,
        "declaration": true,
        "removeComments": true,
        "rootDir": "./core/modules/src",
        "esModuleInterop": true,
        "typeRoots": [
            "./node_modules/@types",
            "./core/modules/src/types/**/*"
        ]
    }
}